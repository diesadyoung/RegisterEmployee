@model RegisterEmployee.Models.Companies

@{
    ViewData["Title"] = "AddCompany";
}

<h1>AddCompany</h1>

<h4>Companies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCompany">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
